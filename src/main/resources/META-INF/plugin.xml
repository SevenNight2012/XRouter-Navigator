<idea-plugin>
    <id>com.mrcd.xrouter.navigator</id>
    <name>XRouter-Navigator</name>
    <vendor email="xuxingchen2016@gmail.com" url="https://github.com/SevenNight2012">NewsDog</vendor>

    <description><![CDATA[
    This is a plugin for Android Library XRouter, navigate to the activity which linked with router!
    ]]></description>

    <!-- Minimum and maximum build of IDE compatible with the plugin -->
    <idea-version since-build="192" until-build="201.*"/>

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <!-- Add your extensions here -->
        <codeInsight.lineMarkerProvider language="JAVA"
                                        implementationClass="com.mrcd.xrouter.nav.LineMarker" />
        <!-- Add your extensions here -->
        <codeInsight.lineMarkerProvider language="kotlin"
                                        implementationClass="com.mrcd.xrouter.nav.LineMarker" />
    </extensions>

    <actions>
        <!-- Add your actions here -->
    </actions>

    <depends>org.jetbrains.kotlin</depends>
    <depends>com.intellij.modules.java</depends>
</idea-plugin>